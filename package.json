{
  "name": "base-razzle",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "run-p watch:**",
    "watch:css": "npm run build:css -- -w",
    "watch:razzle": "razzle start",
    "build": "NODE_ENV=production run-s build:css build:razzle",
    "build:css": "postcss styles/index.scss -o src/index.css",
    "build:razzle": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "precommit": "lint-staged",
    "analyze": "BUNDLE_ANALYZE=true npm run build"
  },
  "dependencies": {
    "@types/react-image-gallery": "^1.0.2",
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "postcss": "^7",
    "react": "^16.10.2",
    "react-bnb-gallery": "^1.4.4",
    "react-dom": "^16.10.2",
    "react-icons": "^4.2.0",
    "react-image-gallery": "^1.0.8",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^23.3.14",
    "@types/node": "^12.6.6",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^5.1.7",
    "@types/webpack-env": "^1.14.0",
    "autoprefixer": "^9",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2",
    "razzle": "^3.0.0",
    "razzle-plugin-bundle-analyzer": "^1.0.2",
    "razzle-plugin-scss": "^3.0.0",
    "razzle-plugin-typescript": "^3.0.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
